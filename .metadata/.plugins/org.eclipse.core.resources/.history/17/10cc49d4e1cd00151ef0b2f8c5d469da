package ass2;

public class MainClass {
	
		public static void main(String[] args) {
	
		int size = 5;
		Person persons [] = new Person [size];
		persons[0] = new Person("John",1.8,65);
		persons[1] = new Person("Luke",1.75,70);
		persons[2] = new Person("Archodula",1.6,80);
		persons[3] = new Person("Gold",1.76,65);
		persons[4] = new Person("Matti",1.75,67);
		
		for(int i=0;i<persons.length;i++){
			
			
			System.out.println(persons[i].getInfo());
			System.out.println(persons[i].identity());
			System.out.println();
			
			Person per = new Person(persons[0]);
			System.out.println(per.getInfo());
			System.out.println(per.identity());
			System.out.println();
			
			System.out.println(per.higherHeight(persons[0]);
			System.out.println();
	}
		
		
	}

}
